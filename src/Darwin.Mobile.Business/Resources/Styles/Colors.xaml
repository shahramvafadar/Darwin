<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Dark neutrals -->
    <Color x:Key="Neutral0">#121212</Color>
    <Color x:Key="Neutral50">#1F1F1F</Color>
    <Color x:Key="Neutral100">#282828</Color>
    <Color x:Key="Neutral900">#E0E0E0</Color>

    <!-- Brand Gold (accent) -->
    <Color x:Key="BrandGold500">#D4AF37</Color>
    <Color x:Key="BrandGold700">#B08A20</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource Neutral0}" />
    <SolidColorBrush x:Key="BrushSurface"    Color="{StaticResource Neutral50}" />
    <SolidColorBrush x:Key="BrushPrimary"    Color="{StaticResource BrandGold500}" />
    <SolidColorBrush x:Key="BrushOnPrimary"  Color="{StaticResource Neutral900}" />
    <SolidColorBrush x:Key="BrushOnSurface"  Color="{StaticResource Neutral900}" />
</ResourceDictionary>