<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Darwin.Mobile.Business.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Darwin.Mobile.Business"
    xmlns:pages="clr-namespace:Darwin.Mobile.Business.Pages"
    Title="Darwin.Mobile.Business">

    <!-- TODO: routes & tabs -->
    <TabBar>
        <ShellContent Title="Scan" 
                      ContentTemplate="{DataTemplate pages:ScannerPage}" 
                      Route="scan" />
        <ShellContent Title="Session" 
                      ContentTemplate="{DataTemplate pages:SessionPage}" 
                      Route="session" />
    </TabBar>

    <!-- Additional routes -->
    <ShellContent Title="Login" 
                  ContentTemplate="{DataTemplate pages:LoginPage}" 
                  Route="login" />
</Shell>
