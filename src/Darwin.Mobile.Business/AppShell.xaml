<?xml version="1.0" encoding="utf-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Darwin.Mobile.Business.Views"
    xmlns:res="clr-namespace:Darwin.Mobile.Business.Resources"
    xmlns:local="clr-namespace:Darwin.Mobile.Business.Constants"
    x:Class="Darwin.Mobile.Business.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <!--
      Toolbar logout item:
      MAUI ToolbarItem has no IsVisible property.
      Visibility is controlled from code-behind by adding/removing this item from ToolbarItems collection.
    -->
    <Shell.ToolbarItems>
        <ToolbarItem x:Name="LogoutToolbarItem"
                     Text="Logout"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>

    <!-- Login route (kept outside TabBar) -->
    <ShellContent
        Route="{x:Static local:Routes.Login}"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Main bottom navigation (all phases visible) -->
    <TabBar Route="MainTabs">

        <!-- Phase 1 (active) -->
        <ShellContent
            Route="{x:Static local:Routes.Home}"
            Title="{x:Static res:AppResources.HomeTitle}"
            ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent
            Route="{x:Static local:Routes.Scanner}"
            Title="{x:Static res:AppResources.ScanTitle}"
            ContentTemplate="{DataTemplate views:ScannerPage}" />

        <!-- Future phases (currently placeholders) -->
        <ShellContent
            Route="dashboard"
            Title="Dashboard"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <ShellContent
            Route="rewards"
            Title="Rewards"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <ShellContent
            Route="team"
            Title="Team"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <ShellContent
            Route="settings"
            Title="Settings"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

    </TabBar>

    <!-- Session details route -->
    <ShellContent
        Route="{x:Static local:Routes.Session}"
        ContentTemplate="{DataTemplate views:SessionPage}" />
</Shell>
