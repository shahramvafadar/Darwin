<?xml version="1.0" encoding="utf-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Darwin.Mobile.Business.Views"
    xmlns:res="clr-namespace:Darwin.Mobile.Business.Resources"
    xmlns:local="clr-namespace:Darwin.Mobile.Business.Constants"
    x:Class="Darwin.Mobile.Business.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <!--
      Logout is visible only when user is in authenticated area.
      It is hidden on Login route from code-behind.
    -->
    <Shell.ToolbarItems>
        <ToolbarItem x:Name="LogoutToolbarItem"
                     Text="Logout"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>

    <!--
      Bottom tab navigation:
      - Phase 1 tabs are active (Home, Scan).
      - Future tabs are present now and point to Coming Soon placeholders.
    -->
    <TabBar>

        <!-- Phase 1: Home -->
        <ShellContent
            Route="{x:Static local:Routes.Home}"
            Title="{x:Static res:AppResources.HomeTitle}"
            ContentTemplate="{DataTemplate views:HomePage}" />

        <!-- Phase 1: Scanner -->
        <ShellContent
            Route="{x:Static local:Routes.Scanner}"
            Title="{x:Static res:AppResources.ScanTitle}"
            ContentTemplate="{DataTemplate views:ScannerPage}" />

        <!-- Phase 2+: Dashboard (placeholder for now) -->
        <ShellContent
            Route="{x:Static local:Routes.ComingSoonDashboard}"
            Title="Dashboard"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <!-- Phase 2+: Rewards (placeholder for now) -->
        <ShellContent
            Route="{x:Static local:Routes.ComingSoonRewards}"
            Title="Rewards"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <!-- Phase 2+: Team (placeholder for now) -->
        <ShellContent
            Route="{x:Static local:Routes.ComingSoonTeam}"
            Title="Team"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

        <!-- Phase 2+: Settings (placeholder for now) -->
        <ShellContent
            Route="{x:Static local:Routes.ComingSoonSettings}"
            Title="Settings"
            ContentTemplate="{DataTemplate views:ComingSoonPage}" />

    </TabBar>

</Shell>
