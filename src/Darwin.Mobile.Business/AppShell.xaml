<?xml version="1.0" encoding="utf-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Darwin.Mobile.Business.Views"
    xmlns:res="clr-namespace:Darwin.Mobile.Business.Resources"
    xmlns:local="clr-namespace:Darwin.Mobile.Business.Constants"
    x:Class="Darwin.Mobile.Business.AppShell">

    <!-- Flyout items for main application pages -->
    <FlyoutItem Title="{x:Static res:AppResources.HomeTitle}" Route="{x:Static local:Routes.Home}">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static res:AppResources.ScanTitle}" Route="{x:Static local:Routes.Scanner}">
        <ShellContent ContentTemplate="{DataTemplate views:ScannerPage}" />
    </FlyoutItem>

    <!-- Login route (not shown in flyout) -->
    <ShellContent Route="{x:Static local:Routes.Login}" ContentTemplate="{DataTemplate views:LoginPage}" />

    <ShellContent Route="{x:Static local:Routes.Session}" ContentTemplate="{DataTemplate views:SessionPage}" />

</Shell>
