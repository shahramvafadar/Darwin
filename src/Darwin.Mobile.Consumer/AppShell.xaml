<?xml version="1.0" encoding="utf-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Darwin.Mobile.Consumer.Views"
    xmlns:local="clr-namespace:Darwin.Mobile.Consumer.Constants"
    xmlns:res="clr-namespace:Darwin.Mobile.Consumer.Resources"
    x:Class="Darwin.Mobile.Consumer.AppShell">

    <!-- Define bottom tabs -->
    <TabBar>
        <ShellContent Title="{x:Static res:AppResources.QrTitle}"
                      Route="{x:Static local:Routes.Qr}"
                      ContentTemplate="{DataTemplate views:QrPage}" />

        <ShellContent Title="{x:Static res:AppResources.DiscoverTitle}"
                      Route="{x:Static local:Routes.Discover}"
                      ContentTemplate="{DataTemplate views:DiscoverPage}" />

        <ShellContent Title="{x:Static res:AppResources.RewardsTitle}"
                      Route="{x:Static local:Routes.Rewards}"
                      ContentTemplate="{DataTemplate views:RewardsPage}" />

        <ShellContent Title="{x:Static res:AppResources.ProfileTitle}"
                      Route="{x:Static local:Routes.Profile}"
                      ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>

    <!-- Login route (not part of tab bar) -->
    <ShellContent Route="{x:Static local:Routes.Login}" ContentTemplate="{DataTemplate views:LoginPage}" />
</Shell>
