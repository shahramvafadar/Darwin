<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Darwin.Mobile.Consumer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Darwin.Mobile.Consumer"
    xmlns:pages="clr-namespace:Darwin.Mobile.Consumer.Pages"
    Title="Darwin.Mobile.Consumer">

    <TabBar>
        <ShellContent Title="QR" 
                      ContentTemplate="{DataTemplate pages:QrPage}" 
                      Route="qr" />
        <ShellContent Title="Discover" 
                      ContentTemplate="{DataTemplate pages:DiscoverPage}" 
                      Route="discover" />
        <ShellContent Title="Rewards" 
                      ContentTemplate="{DataTemplate pages:RewardsPage}" 
                      Route="rewards" />
    </TabBar>

    <ShellContent Title="Login" 
                  ContentTemplate="{DataTemplate pages:LoginPage}" 
                  Route="login" />
</Shell>
