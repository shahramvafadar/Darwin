<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Darwin.Mobile.Consumer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Darwin.Mobile.Consumer"
    xmlns:pages="clr-namespace:Darwin.Mobile.Consumer.Pages"
    Title="Loyan - Consumer">

    <FlyoutItem Title="Home" Icon="home.png" Route="Home">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Rewards" Icon="reward.png" Route="Rewards">
        <ShellContent ContentTemplate="{DataTemplate views:ComingSoonPage}" />
    </FlyoutItem>
    
</Shell>
