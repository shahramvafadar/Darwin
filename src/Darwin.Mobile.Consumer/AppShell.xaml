<?xml version="1.0" encoding="utf-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Darwin.Mobile.Consumer.Views"
       xmlns:res="clr-namespace:Darwin.Mobile.Consumer.Resources" 
       xmlns:local="clr-namespace:Darwin.Mobile.Consumer"
       x:Class="Darwin.Mobile.Consumer.AppShell">
    <FlyoutItem Title="{x:Static res:AppResources.HomeTitle}" Route="{x:Static local:Routes.Home}">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Rewards" Route="{x:Static local:Routes.Rewards}">
        <ShellContent ContentTemplate="{DataTemplate views:ComingSoonPage}" />
    </FlyoutItem>
</Shell>
