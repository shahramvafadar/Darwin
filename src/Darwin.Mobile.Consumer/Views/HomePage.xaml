<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Darwin.Mobile.Consumer.Views.HomePage"
    x:DataType="local:HomeViewModel"
    Title="{x:Static res:AppResources.HomeTitle}">

    <VerticalStackLayout Spacing="16" Padding="24">
        <Label Text="{Binding Greeting}" FontSize="24"
               TextColor="{StaticResource ColorOnSurface}" />
        <Button Text="{x:Static res:AppResources.StartButton}"
                Style="{StaticResource PrimaryButtonStyle}"
                Command="{Binding StartCommand}" />
    </VerticalStackLayout>
</ContentPage>
