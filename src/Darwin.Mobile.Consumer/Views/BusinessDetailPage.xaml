<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Darwin.Mobile.Consumer.ViewModels"
    xmlns:res="clr-namespace:Darwin.Mobile.Consumer.Resources"
    x:Class="Darwin.Mobile.Consumer.Views.BusinessDetailPage"
    x:DataType="vm:BusinessDetailViewModel"
    Title="{Binding Business.Name, FallbackValue={x:Static res:AppResources.BusinessDetailsTitle}}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- Business name -->
            <Label Text="{Binding Business.Name}"
                   Style="{StaticResource TitleLabelStyle}"
                   LineBreakMode="WordWrap" />

            <!-- Business category if available -->
            <Label Text="{Binding Business.Category,
                                  StringFormat='{x:Static res:AppResources.BusinessCategoryFormat}'}"
                   FontSize="14"
                   IsVisible="{Binding Business.Category, Converter={StaticResource InverseBoolConverter}}" />

            <!-- Placeholder for additional details (description, address, etc.) -->
            <Label Text="{x:Static res:AppResources.BusinessDetailsPlaceholder}"
                   FontSize="14"
                   TextColor="{StaticResource TextSecondaryColor}" />

            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}" />

            <!-- Join loyalty program button -->
            <Button Text="{x:Static res:AppResources.JoinProgramButton}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding JoinCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               Color="{StaticResource BrushPrimary}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
