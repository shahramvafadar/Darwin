@model IReadOnlyList<Darwin.Application.Catalog.DTOs.CategoryListItemDto>
@{
    ViewData["Title"] = "Categories";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.Total ?? 0);
    var pages = (int)Math.Ceiling(total / (double)pageSize);
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Categories</h2>
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-primary">Create Category</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name (de-DE)</th>
                        <th class="text-center">Active</th>
                        <th class="text-center">Sort</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No categories found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@(string.IsNullOrWhiteSpace(c.Name) ? "-" : c.Name)</td>
                                <td class="text-center">
                                    @if (c.IsActive)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-outline-secondary border">No</span>
                                    }
                                </td>
                                <td class="text-center">@c.SortOrder</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
@*                                     <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this category?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@c.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form> *@
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger ms-1"
                                            data-delete="open-modal"
                                            data-area="Admin"
                                            data-controller="Categories"
                                            data-action="Delete"
                                            data-id="@c.Id"
                                            data-name="@(string.IsNullOrWhiteSpace(c.Name) ? c.Id.ToString() : c.Name)">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (pages > 1)
        {
            <nav aria-label="Pagination" class="mt-3">
                <ul class="pagination justify-content-end mb-0">
                    @for (int i = 1; i <= pages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <partial name="~/Areas/Admin/Views/Shared/_ConfirmDeleteModal.cshtml" />
    </div>
</div>
