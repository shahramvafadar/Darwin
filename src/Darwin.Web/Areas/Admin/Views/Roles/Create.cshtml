@model Darwin.Web.Areas.Admin.ViewModels.Identity.RoleCreateVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Darwin.Web

@{
    ViewData["Title"] = "Create Role";
}

<h1 class="mb-3"><i class="fa fa-plus"></i> Create Role</h1>

<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Key" class="form-label"></label>
                <field-help title="Key" content="Stable role key (e.g., 'Members', 'Administrators')." placement="right"></field-help>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <field-help title="Display Name" content="Human-friendly name shown in the Admin UI." placement="right"></field-help>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <field-help title="Description" content="Optional context about this role's purpose." placement="right"></field-help>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-end">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Back</a>
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
