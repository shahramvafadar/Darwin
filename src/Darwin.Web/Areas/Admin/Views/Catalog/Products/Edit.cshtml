@model Darwin.Web.Areas.Admin.ViewModels.Catalog.ProductEditVm
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    @* RowVersion hidden for concurrency *@
    <input type="hidden" asp-for="RowVersion" />

    <fieldset>
        <legend>Basics</legend>
        <div class="mb-3">
            <label class="form-label">Kind</label>
            <select asp-for="Kind" class="form-select">
                <option>Simple</option>
                <option>Variant</option>
                <option>Bundle</option>
                <option>Digital</option>
                <option>Service</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">BrandId</label>
            <input asp-for="BrandId" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">PrimaryCategoryId</label>
            <input asp-for="PrimaryCategoryId" class="form-control" />
        </div>
    </fieldset>

    <fieldset>
        <legend>Translations</legend>
        @for (int i = 0; i < Model.Translations.Count; i++)
        {
            <div class="border rounded p-3 mb-3">
                <div class="mb-2">
                    <label class="form-label">Culture</label>
                    <input asp-for="Translations[@i].Culture" class="form-control" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Name</label>
                    <input asp-for="Translations[@i].Name" class="form-control" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Slug</label>
                    <input asp-for="Translations[@i].Slug" class="form-control" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Full Description (HTML)</label>
                    <textarea asp-for="Translations[@i].FullDescriptionHtml" class="form-control" rows="4"></textarea>
                </div>
            </div>
        }
    </fieldset>

    <fieldset>
        <legend>Variants</legend>
        @for (int i = 0; i < Model.Variants.Count; i++)
        {
            <div class="border rounded p-3 mb-3">
                <div class="row g-2">
                    <div class="col-md-4">
                        <label class="form-label">SKU</label>
                        <input asp-for="Variants[@i].Sku" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Base Price (Net, Minor)</label>
                        <input asp-for="Variants[@i].BasePriceNetMinor" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">TaxCategoryId</label>
                        <input asp-for="Variants[@i].TaxCategoryId" class="form-control" />
                    </div>
                </div>
            </div>
        }
    </fieldset>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
