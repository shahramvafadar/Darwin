@model IReadOnlyList<Darwin.Application.Catalog.DTOs.ProductListItemDto>
@{
    ViewData["Title"] = "Products";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.Total ?? 0);
    var pages = (int)Math.Ceiling(total / (double)pageSize);
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Products</h2>
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name (de-DE)</th>
                        <th class="text-center">Variants</th>
                        <th class="text-center">Active</th>
                        <th class="text-center">Visible</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No products found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td>@(string.IsNullOrWhiteSpace(p.DefaultName) ? "-" : p.DefaultName)</td>
                                <td class="text-center"><span class="badge bg-secondary">@p.VariantCount</span></td>
                                <td class="text-center">
                                    @if (p.IsActive)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-outline-secondary border">No</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (p.IsVisible)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-outline-secondary border">No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger ms-1"
                                            data-delete="open-modal"
                                            data-area="Admin"
                                            data-controller="Products"
                                            data-action="Delete"
                                            data-id="@p.Id"
                                            data-name="@(string.IsNullOrWhiteSpace(p.DefaultName) ? p.Id.ToString() : p.DefaultName)">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (pages > 1)
        {
            <nav aria-label="Pagination" class="mt-3">
                <ul class="pagination justify-content-end mb-0">
                    @for (int i = 1; i <= pages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <partial name="~/Areas/Admin/Views/Shared/_ConfirmDeleteModal.cshtml" />

    </div>
</div>
