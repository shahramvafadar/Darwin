@model Darwin.Web.Areas.Admin.ViewModels.Identity.PermissionsListVm
@{
    ViewData["Title"] = "Permissions";
    var totalPages = (int)Math.Ceiling((double)Model.Total / (double)Model.PageSize);
}

<h1 class="mb-3"><i class="fa fa-key"></i> Permissions</h1>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label for="q" class="form-label">Search</label>
                <field-help title="Search term" content="Searches in key and display name." placement="right"></field-help>
                <input id="q" name="q" value="@Model.Query" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="pageSize" class="form-label">Page size</label>
                <select id="pageSize" name="pageSize" class="form-select" asp-items="Model.PageSizeItems"></select>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New Permission</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Key</th>
                        <th>Display Name</th>
                        <th>Description</th>
                        <th style="width:120px;">System</th>
                        <th class="text-end" style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr><td colspan="5" class="text-center text-muted p-4">No permissions found.</td></tr>
                }
                else
                {
                    foreach (var p in Model.Items)
                    {
                        <tr>
                            <td class="text-monospace">@p.Key</td>
                            <td>@p.DisplayName</td>
                            <td>@(string.IsNullOrWhiteSpace(p.Description) ? "-" : p.Description)</td>
                            <td>
                                @if (p.IsSystem) { <span class="badge bg-secondary"><i class="fa fa-lock"></i> System</span> }
                                else { <span class="text-muted">No</span> }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fa fa-pen"></i> Edit
                                </a>
                                @if (!p.IsSystem)
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#confirmDeleteModal"
                                            data-action="@Url.Action("Delete", "Permissions", new { area = "Admin" })"
                                            data-id="@p.Id"
                                            data-name="@p.DisplayName"
                                            data-rowversion="@Convert.ToBase64String(p.RowVersion)">
                                        <i class="fa fa-trash"></i> Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-end">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-q="@Model.Query">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<partial name="~/Areas/Admin/Views/Shared/_ConfirmDeleteModal.cshtml" />
