@model Darwin.Web.Areas.Admin.ViewModels.Identity.PermissionEditVm
@{
    ViewData["Title"] = "Edit Permission";
}

<h1 class="mb-3"><i class="fa fa-key"></i> Edit Permission</h1>

<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Key</label>
                <input class="form-control" value="@ViewBag.Key" readonly />
                <small class="text-muted">Key cannot be changed.</small>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <field-help title="Display name" content="Human‑friendly name shown in the UI." placement="right"></field-help>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">System</label>
                @if (ViewBag.IsSystem == true)
                {
                    <span class="badge bg-secondary"><i class="fa fa-lock"></i> System</span>
                }
                else
                {
                    <span class="text-muted">No</span>
                }
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
                @if (ViewBag.IsSystem != true)
                {
                    <button type="button"
                            class="btn btn-outline-danger"
                            data-delete="modal"
                            data-action="@Url.Action("Delete", "Permissions", new { area = "Admin" })"
                            data-id="@Model.Id"
                            data-name="@ViewBag.Key">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                }
            </div>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
            </div>
        </div>
    </div>
</form>

<partial name="~/Areas/Admin/Views/Shared/_ConfirmDeleteModal.cshtml" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
