@model Darwin.Web.Areas.Admin.ViewModels.Identity.UserChangePasswordVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Darwin.Web

@{
    ViewData["Title"] = "Change Password";
}

<h1 class="mb-3"><i class="fa fa-key"></i> Change Password</h1>

<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label"></label>
                <field-help title="Current password" content="If the current password is wrong, you'll see an error." placement="right"></field-help>
                <input asp-for="CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <field-help title="New password" content="Must satisfy password policy (length/complexity)." placement="right"></field-help>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
