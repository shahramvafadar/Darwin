@model Darwin.Web.Areas.Admin.ViewModels.Identity.UserChangePasswordVm

@{
    ViewData["Title"] = "Change Password";
}

<h1 class="mb-3"><i class="fa fa-key"></i> Change Password</h1>

<form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">

            <div class="mb-3">
                <label class="form-label">User</label>
                <div class="form-text">
                    <!-- Display-only convenience to avoid changing the wrong user -->
                    <strong>@Model.Email</strong> <span class="text-muted">(Id: @Model.Id)</span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <field-help title="New password" content="At least 8 characters" placement="right"></field-help>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                <field-help title="Confirm new password" content="Must match the new password" placement="right"></field-help>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> Save
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
