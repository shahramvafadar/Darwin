@model Darwin.Web.Areas.Admin.ViewModels.Identity.UsersListVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Users";
}

<h1 class="mb-3">Users</h1>
<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-5">
        <label class="form-label" for="q">Search</label>
        <input id="q" name="q" value="@Model.Query" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label" for="active">Active</label>
        <select id="active" name="active" class="form-select">
            <option value="">All</option>
            <option value="true" selected="@(Model.IsActive == true)">Active</option>
            <option value="false" selected="@(Model.IsActive == false)">Inactive</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label" for="pageSize">Page size</label>
        <select id="pageSize" name="pageSize" class="form-select">
            <option value="10" selected="@(Model.PageSize == 10)">10</option>
            <option value="20" selected="@(Model.PageSize == 20)">20</option>
            <option value="50" selected="@(Model.PageSize == 50)">50</option>
            <option value="100" selected="@(Model.PageSize == 100)">100</option>
        </select>
    </div>
    <div class="col-md-1">
        <label class="form-label d-block">&nbsp;</label>
        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
    </div>
    <div class="col-md-2 text-end">
        <a asp-action="Create" class="btn btn-success"><i class="fa fa-user-plus"></i> New User</a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Email</th>
                <th>Active</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Created</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Items)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@(u.IsActive ? "Yes" : "No")</td>
                    <td>@(u.HasPassword ? "Set" : "None")</td>
                    <td>@(string.IsNullOrWhiteSpace(u.RolesCsv) ? "-" : u.RolesCsv)</td>
                    <td>@u.CreatedAtUtc.ToString("u")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-pen"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
