@model Darwin.Web.Areas.Admin.ViewModels.Identity.UserChangeEmailVm
@{
    ViewData["Title"] = "Change Email";
    var currentEmail = ViewBag.CurrentEmail as string ?? string.Empty;
}

<h1 class="mb-3"><i class="fa fa-envelope"></i> Change Email</h1>

<div class="alert alert-warning">
    Changing the email requires confirmation. The user cannot sign in until the new email is confirmed.
</div>

<form asp-action="ChangeEmail" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">

            <!-- Current email is shown read-only. It is passed via query string to avoid an extra fetch. -->
            <div class="mb-3">
                <label class="form-label">Current Email</label>
                <field-help for="NewEmail" text="This is the current login email. It is read-only."></field-help>
                <input class="form-control" value="@currentEmail" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="NewEmail" class="form-label"></label>
                <field-help for="NewEmail" text="The new login email address for this user." placement="right"></field-help>
                <input asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> Save
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
