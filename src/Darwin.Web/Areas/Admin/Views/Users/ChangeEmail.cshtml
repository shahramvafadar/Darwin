@model Darwin.Web.Areas.Admin.ViewModels.Identity.UserChangeEmailVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Darwin.Web

@{
    ViewData["Title"] = "Change Email";
}

<h1 class="mb-3"><i class="fa fa-envelope"></i> Change Email</h1>

<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<div class="alert alert-warning">
    Changing the email requires confirmation. The user cannot sign in until the new email is confirmed.
</div>

<form asp-action="ChangeEmail" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Current Email</label>
                <input class="form-control" value="@Model.NewEmail" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="NewEmail" class="form-label"></label>
                <field-help title="New Email" content="The new login email address for this user." placement="right"></field-help>
                <input asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
