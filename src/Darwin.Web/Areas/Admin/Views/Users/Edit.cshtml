@model Darwin.Web.Areas.Admin.ViewModels.Identity.UserEditVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Darwin.Web

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="mb-3"><i class="fa fa-user-pen"></i> Edit User</h1>

<partial name="~/Areas/Admin/Views/Shared/_Alerts.cshtml" />

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RowVersion" />

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">Email</label>
                    <div class="d-flex align-items-center">
                        <input class="form-control" value="@ViewBag.Email ?? " (hidden)"" readonly />
                        <a class="btn btn-outline-secondary ms-2"
                           asp-action="ChangeEmail" asp-route-id="@Model.Id" asp-route-currentEmail="@ViewBag.Email">
                            <i class="fa fa-envelope"></i> Change Email
                        </a>
                    </div>
                    <small class="text-muted">Email cannot be edited here.</small>
                </div>

                <div class="col-md-4 d-flex align-items-end justify-content-end">
                    <a class="btn btn-outline-warning"
                       asp-action="ChangePassword" asp-route-id="@Model.Id">
                        <i class="fa fa-key"></i> Change Password
                    </a>
                </div>

                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Locale" class="form-label"></label>
                    <field-help title="Locale" content="Preferred language/locale." placement="right"></field-help>
                    <select asp-for="Locale" class="form-select" asp-items="Model.LocaleItems"></select>
                    <span asp-validation-for="Locale" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Currency" class="form-label"></label>
                    <select asp-for="Currency" class="form-select" asp-items="Model.CurrencyItems"></select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Timezone" class="form-label"></label>
                    <select asp-for="Timezone" class="form-select" asp-items="Model.TimezoneItems"></select>
                    <span asp-validation-for="Timezone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneE164" class="form-label"></label>
                    <input asp-for="PhoneE164" class="form-control" />
                    <span asp-validation-for="PhoneE164" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-check mt-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <div>
                <button type="button"
                        class="btn btn-outline-danger"
                        data-delete="modal"
                        data-action="@Url.Action("Delete", "Users", new { area = "Admin" })"
                        data-id="@Model.Id"
                        data-name="@ViewBag.Email ?? " (user)"">
                    <i class="fa fa-trash"></i> Delete
                </button>
            </div>
            <div class="text-end">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
            </div>
        </div>
    </div>
</form>

<partial name="~/Areas/Admin/Views/Shared/_ConfirmDeleteModal.cshtml" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
