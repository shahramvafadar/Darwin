@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Registrieren";
}

<h1 class="mb-3">Registrieren</h1>

<form asp-action="RegisterPost" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label for="email" class="form-label">E-Mail</label>
        <input id="email" name="email" type="email" class="form-control" required />
        <span class="text-danger field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Passwort</label>
        <input id="password" name="password" type="password" class="form-control" required autocomplete="new-password" />
        <span class="text-danger field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
    </div>

    <!-- Hidden localization defaults for Germany.
         TODO: Unhide these fields when multi-lingual UX is enabled and allow users to choose. -->
    <fieldset class="d-none">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="locale" class="form-label">Locale</label>
                <select id="locale" name="locale" class="form-select">
                    <option value="de-DE" selected>Deutsch (Deutschland)</option>
                    <option value="en-US">English (United States)</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label for="currency" class="form-label">Währung</label>
                <select id="currency" name="currency" class="form-select">
                    <option value="EUR" selected>EUR (€)</option>
                    <option value="USD">USD ($)</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label for="timezone" class="form-label">Zeitzone</label>
                <select id="timezone" name="timezone" class="form-select">
                    <option value="Europe/Berlin" selected>Europe/Berlin</option>
                    <option value="UTC">UTC</option>
                </select>
            </div>
        </div>
        <input type="hidden" name="supportedCulturesCsv" value="de-DE,en-US" />
    </fieldset>

    <div class="text-end">
        <button type="submit" class="btn btn-primary">Konto erstellen</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
