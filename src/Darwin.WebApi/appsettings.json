{
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "buffered": true,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": { "Application": "Darwin.WebApi" }
  },

  "DataProtection": {
    "KeysPath": "D:\\Darwin\\_shared_keys"
  },

  "Jwt": {
    "Issuer": "Darwin.WebApi",
    "Audience": "Darwin.MobileClients",
    "SigningKey": "SET_STRONG_PRODUCTION_SECRET_KEY_VIA_USER_SECRETS_OR_ENV",
    "ClockSkewSeconds": 60
  }
}
